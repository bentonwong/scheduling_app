<div class="row" style="margin-bottom: 50px">

  <%= form_for employee do |f| %>

    <div class="row">
      <div class="col s6">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
    </div>

    <div class="row">
      <%= f.check_box :assignable %>
      <%= f.label :assignable, "Assignable?" %>
    </div>

    <div class="row">
      <%= f.check_box :admin %>
      <%= f.label :admin, "Admin?" %>
    </div>

    <div class="row">
      <%= f.label :teams, "Teams" %>
      <%= f.collection_check_boxes :team_ids, teams, :id, :name do |t| %>
        <p>
          <ul style="list-style-type:none">
            <li>
              <%= t.check_box %> <%= t.label %>
            </li>
          </ul>
        </p>
      <% end %>
    </div>

</div>

  <button type="submit" class="waves-effect waves-light btn">
    <%= f.submit %>


  <% end %>
