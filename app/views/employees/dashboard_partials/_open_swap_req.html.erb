<div class="row yellow" style="padding: 0.5em">
  <h6>
    Your Open Swap Requests
  </h6>
</div>

<div class="row">
  <% if employee_open_requests?(employee) %>
    <% employee_open_requests(employee).each do |request| %>
      <div class="center-align" style="margin: 10px 0; font-size: small">
        <%= link_to display_req_info(request), shift_details_path(request.shift.team, request.shift), method: :get %>
        <span class="grey darken-1 white-text z-depth-2" style="margin: 0 1em; padding: 5px; font-size: x-small">
          WAITING
        </span>
      </div>
    <% end %>
  <% else %>
    <p>None</p>
  <% end %>
</div>
