<div class="container" style="margin: 25% auto">
  <%= form_for @employee, :url => url_for(:controller => 'session', :action => 'create') do |f| %>

    <div class="row">
      <div class="col s2 offset-s1" style="padding: 10px; text-align: right; font-size: 17px">
        Login as
      </div>

      <div class="col s6">
        <%= f.collection_select :id, @employees, :id, :name %>
      </div>

      <div class="col s1" style="padding-top: 3px">
        <button type="submit" class="waves-effect waves-light btn-floating btn-medium">
          <i class="material-icons icon-white">
            <%= f.submit "navigate_next" %>
          </i>
        </button>
      </div>
    </div>
  <% end %>
</div>

<div class="center-align">
  <% if !employee_all.any? {|employee| employee.admin } %>
    <%= link_to "Create Admin", create_admin_path, method: :get %>
  <% end %>
</div>
